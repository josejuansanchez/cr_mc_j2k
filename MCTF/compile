#!/bin/bash
set -x

if [ ! -e $HOME/bin ]; then
    mkdir $HOME/bin
fi

read dirs << EOF
$PATH
EOF

IFS=:
# $HOME/bin insertion in the PATH variable, if it does not exist

contains_bin=0
for dir in $dirs; do
    if [ "$dir" = "$HOME/bin" ]; then
        contains_bin=1
    fi
done

IFS=

if [ $contains_bin = 0 ]; then
    PATH=$HOME/bin:$PATH
fi
# End of $HOME/bin insertion in the PATH variable

make -C src
export MCTF=$PWD

cat <<EOF
[0;32m
This script defines the shell variable MCTF as:

export MCTF=$MCTF

If needed, include this variable in your $HOME/.bashrc file for
futher references.
[1;0m
EOF

set +x
